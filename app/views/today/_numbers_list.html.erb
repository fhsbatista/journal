<div>
  <% numbers.each_with_index do |decimal, index| %>
    <% first = index == 0 %>
    <% greater = decimal > numbers[index - 1] %>
    <span style="color: <%= first ? 'black' : greater ? 'green' : 'red' %>;">
      <%= decimal %>
    </span>
    <% if index < numbers.size - 1 %>
    <span> | </span>
    <% end %>
  <% end %>
</div>
